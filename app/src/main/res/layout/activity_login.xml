<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_990000"
    tools:context=".activity.LoginActivity">


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/blue_6699bb" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_retangle_solid_fffff_radius_30"
        android:drawableLeft="@mipmap/ic_launcher"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:text="魏宁鹏"
        android:textColorHint="@color/black_999999"
        android:textSize="@dimen/font_28"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.774" />

    <com.simplexx.wnp.util.ui.widget.BlurringView
        android:id="@+id/blur"
        android:layout_width="300dp"
        android:layout_height="match_parent" />
</android.support.constraint.ConstraintLayout>